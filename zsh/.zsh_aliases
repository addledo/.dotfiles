alias emu='basename "/"$(ps -o cmd -f -p $(cat /proc/$(echo $$)/stat | cut -d \  -f 4) | tail -1 | sed '\''s/ .*$//'\'')'
#Escaping single quotes in above - '\'' = closing quote, escaped quote, opening quote

